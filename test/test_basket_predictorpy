import cv2
import time

from drg_barrel_game_bot import BasketPredictor


# video_path = r"C:\Users\patri\Videos\2025-05-28 18-07-47.mkv"
video_path = r"C:\Users\patri\Videos\2025-05-28 18-08-11.mkv"
video_fps = 30

video_reader = cv2.VideoCapture(video_path)



basket_predictor = BasketPredictor()
while video_reader.isOpened():
    ret, frame= video_reader.read()
    if ret:
        basket_predictor.update(frame)
        basket_predictor.detector.draw_borders(frame)
        basket_predictor.draw_basket(frame)
        basket_predictor.draw_traectory(frame)




        cv2.imshow("Video", frame)
        cv2.waitKey(round(1/video_fps*1000))
    else:
        video_reader = cv2.VideoCapture(video_path)